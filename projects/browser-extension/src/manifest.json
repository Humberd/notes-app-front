{
  "manifest_version": 2,
  "name": "Notes App",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "assets/hot-reload.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "all_frames": false,
      "js": [
        "assets/content-selection.js"
      ],
      "css": [
        "assets/content-selection.css"
      ]
    }
  ]
}
