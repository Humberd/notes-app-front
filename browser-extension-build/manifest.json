{
  "manifest_version": 2,
  "name": "Notes App",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "browser-extension/index.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "page": "background/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "all_frames": false,
      "js": [
        "content/runtime.js",
        "content/polyfills.js",
        "content/styles.js",
        "content/main.js"
      ]
    }
  ]
}
