{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "incremental": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "common-library": [
        "projects/common-library/src/public_api"
      ],
      "common-library/*": [
        "projects/common-library/src/*"
      ],
      "@common-library/*": [
        "projects/common-library/src/*"
      ],
      "domains": [
        "projects/domains/src/public_api"
      ],
      "domains/*": [
        "projects/domains/src/*"
      ],
      "@domain/*": [
        "projects/domain/src/*"
      ],
      "auto-generated/*": [
        "auto-generated/*"
      ],
      "composite-library/*": [
        "projects/composite-library/src/*"
      ],
      "@web-app/*": [
        "projects/web-app/src/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "disableTypeScriptVersionCheck": true
  }
}
